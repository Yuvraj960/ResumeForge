MONGO_URI=mongodb://localhost:27017/resumeforge
PORT=your_port_number_here

# ─── AI Provider ───────────────────────────────────────────────────────────
# Set to "ollama" for local model, or "gemini" for Google Gemini API
AI_PROVIDER=ollama

# ─── Ollama (local) ────────────────────────────────────────────────────────
OLLAMA_BASE_URL=ollama_server_url_here
OLLAMA_MODEL=your_ollama_model_name_here

# ─── Gemini (cloud) ────────────────────────────────────────────────────────
# Only needed when AI_PROVIDER=gemini
GEMINI_API_KEY=YOUR_GEMINI_API_KEY
GEMINI_MODEL=your_gemini_model_name_here
